@model IEnumerable<BanDienThoaiDiDong.Models.SANPHAM>

@{
    ViewBag.Title = "TrangChu";
    Layout = "~/Views/Shared/_LayoutTangChu.cshtml";
}

<link rel="stylesheet" href="~/Content/style.css" />
<link rel="stylesheet" href="~/Content/head.css" />
<script src="https://kit.fontawesome.com/ef3275e9a2.js" crossorigin="anonymous"></script>
<link href="~/Content/swiper-bundle.min.css" rel="stylesheet" />
<div class="trangchu-background">
    <div class="slider">
        <!--Hình 1-->
        <div class="myslide fadeaway" style="display:block">
            <div>
                <img src="https://img.tgdd.vn/imgt/f_webp,fit_outside,quality_100,s_1920x533/https://cdn.tgdd.vn/2023/03/banner/iPad10-2880-800-1920x533.png" style="width:100%; height:450px" />
            </div>
        </div>
        <!--Hình 2-->
        <div class="myslide fadeaway">
            <div>
                <img src="https://img.tgdd.vn/imgt/f_webp,fit_outside,quality_100,s_1920x533/https://cdn.tgdd.vn/2023/02/banner/Mac-2880-800-1920x533-1.png" style="width:100%; height:450px" />
            </div>
        </div>
        <!--Hình 3-->
        <div class="myslide fadeaway">
            <div>
                <img src="https://img.tgdd.vn/imgt/f_webp,fit_outside,quality_100,s_1920x533/https://cdn.tgdd.vn/2023/03/banner/iPad10-2880-800-1920x533.png" style="width:100%; height:450px" />
            </div>
        </div>
        <!--2 nút chuy?n slide-->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
    <div style="text-align:right;">
        @using (Html.BeginForm())
        {
            <p>

            </p>
            <div class="form-group form-inline" style="display: inline-flex; text-align: right;">
                @Html.TextBox("SearchString", "", new { @class = "form-control" })
                <input type="submit" class="btn btn-warning" value="Search" />
            </div>
        }
    </div>
    <div class="policy">
        <ul class="pr-policy">
            <li>
                <div class="policy-item">
                    <i class="icon fas fa-check-circle "></i><span>Mẫu mã đa dạng,<br> chính hãng</span>
                </div>
            </li>
            <li>
                <div class="policy-item">
                    <i class="icon fas fa-truck "></i><span>Giao hàng toàn quốc</span>
                </div>
            </li>
            <li>
                <div class="policy-item">
                    <i class="icon fas fa-user-shield "></i><span>Bảo hành có cam kết<br> tới 12 tháng</span>
                </div>
            </li>
            <li>
                <div class="policy-item">
                    <i class="icon fas fa-undo-alt "></i><span>Có thể đổi trả<br> trong vòng 30 ngày</span>
                </div>
            </li>
        </ul>
    </div>
    <div>
        <div class="choose-cate">
            <div class="cate-column">
                <a href="#">
                    <div class="img-catesp cateiphone">
                        <img width="102" height="112" src="https://img.tgdd.vn/imgt/f_webp,fit_outside,quality_100,s_300x300/https://cdn.tgdd.vn/Products/Images/42/250260/s16/iphone-13-pro-silver-1-1-650x650.png">
                    </div>
                    <span>Iphone</span>
                </a>
            </div>
            <div class="cate-column">
                <a href="#">
                    <div class="img-catesp cateiphone">
                        <img width="102" height="112" src="https://img.tgdd.vn/imgt/f_webp,fit_outside,quality_100,s_300x300/https://cdn.tgdd.vn/Products/Images/42/250260/s16/iphone-13-pro-silver-1-1-650x650.png">
                    </div>
                    <span>Iphone</span>
                </a>
            </div>
            <div class="cate-column">
                <a href="#">
                    <div class="img-catesp cateiphone">
                        <img width="102" height="112" src="https://img.tgdd.vn/imgt/f_webp,fit_outside,quality_100,s_300x300/https://cdn.tgdd.vn/Products/Images/42/250260/s16/iphone-13-pro-silver-1-1-650x650.png">
                    </div>
                    <span>Iphone</span>
                </a>
            </div>
            <div class="cate-column">
                <a href="#">
                    <div class="img-catesp cateiphone">
                        <img width="102" height="112" src="https://img.tgdd.vn/imgt/f_webp,fit_outside,quality_100,s_300x300/https://cdn.tgdd.vn/Products/Images/42/250260/s16/iphone-13-pro-silver-1-1-650x650.png">
                    </div>
                    <span>Iphone</span>
                </a>
            </div>
        </div>
    </div>
    <!--product slide-->
    <div class="listing-cate">
        @foreach (var item in Model)
        {

            <div class="listing-cate-item">
                <a href="">
                    <label for="">Mới</label>

                    <div class="item-img">
                        <a href="@Url.Action("Index","DetailProduct",new {id = item.MaSP})">
                            <img src="@item.Hinh" alt="">
                        </a>

                    </div>

                    <h3 style="color: black">@item.TenSP</h3>
                    <p style="color: black">@item.GiaMacDinh(item.MaSP)</p>

                </a>
            </div>

        }
    </div>
    <script src="~/Scripts/swiper-bundle.min.js"></script>
    <script src="~/Scripts/script.js"></script>

