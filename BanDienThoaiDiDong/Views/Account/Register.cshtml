
@model BanDienThoaiDiDong.Models.KHACHHANG
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/register.css" rel="stylesheet" />
</head>
<body>
    <main>
        <div class="box">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="page">
                <div class="header">
                    <p class="logo">Register</p>
                    <button onclick="location.href='@Url.Action("LoginFacebook", "Account")'">
                        <span>
                            <svg class="bi bi-facebook"
                                 xml:space="preserve"
                                 style="enable-background: new 0 0 512 512"
                                 viewBox="0 0 16 16"
                                 y="0"
                                 x="0"
                                 height="16"
                                 width="16"
                                 xmlns:xlink="http://www.w3.org/1999/xlink"
                                 version="1.1"
                                 xmlns="http://www.w3.org/2000/svg">
                            <g>
                            <path class=""
                                  data-original="#475993"
                                  fill="white"
                                  d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"></path>
                        </g>
                        </svg>
                        </span>
                        <span>Đăng nhập bằng Facebook</span>
                    </button>
                    <div class="content__or-text">
                        <span></span>
                        <span>HOẶC</span>
                        <span></span>
                    </div>
                </div>
                <div class="container">
                    <form action="~/Account/Register" method="post">
                        <div class="inputs">
                            <label for="hoten">
                                <input type="text" required="" name="HoTen" id="hoten" />
                                <span>Họ tên</span>
                            </label>
                            <label for="email">
                                <input type="text" required="" name="Email" id="email" />
                                <span>Email</span>
                            </label>
                            <label for="diachi">
                                <input type="text" required="" name="DiaChi" id="diachi" />
                                <span>Địa chỉ</span>
                            </label>
                            <label for="phone">
                                <input type="number" required="" name="SoDienThoai" id="phone" />
                                <span>Số điện thoại</span>
                            </label>
                            <label for="matkhau">
                                <input type="password" required="" name="MatKhau" id="matkhau" />
                                <span>Mật khẩu</span>
                            </label>
                            <label for="confirm">
                                <input type="password" required="" name="ConfirmMatKhau" id="confirm" />
                                <span>Xác nhận lại mật khẩu</span>
                            </label>
                        </div>
                        <button type="submit">Đăng kí</button>
                    </form>
                </div>
            </div>
            <div class="option">
                <p>Đã có tài khoản?<a href="~/Account/Login">Đăng nhập</a></p>
            </div>
        </div>
    </main>
</body>
</html>


