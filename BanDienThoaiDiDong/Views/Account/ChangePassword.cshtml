@model BanDienThoaiDiDong.Models.ChangePassword
@{
    Layout = null;
    ViewBag.Title = "Change Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="~/Content/changepassword.css" />
    <title>Change Password</title>
</head>
<body>
    <div class="container">
        <p class="title">Change Password</p>
        <form class="form" action="~/Account/ChangePassword" method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form_group">
                <label for="currentPassword">Mật khẩu hiện tại</label>
                <input id="currentPassword"
                       name="OldPassword"
                       placeholder="Mật khẩu hiện tại"
                       type="password"
                       autofocus />
                @Html.ValidationMessageFor(m => m.OldPassword)
            </div>
            <div class="form_group">
                <label for="newPassword">Mật khẩu mới</label>
                <input id="newPassword"
                       name="MatKhauMoi"
                       placeholder="Mật khẩu mới"
                       type="password" />
                @Html.ValidationMessageFor(m => m.MatKhauMoi)
            </div>
            <div class="form_group">
                <label for="confirmNewPassword">Xác nhận mật khẩu mới</label>
                <input id="confirmNewPassword"
                       name="ConfirmMatKhauMoi"
                       placeholder="Xác nhận lại mật khẩu mới"
                       type="password" />
                @Html.ValidationMessageFor(m => m.ConfirmMatKhauMoi)
            </div>
            <button class="continue" type="submit">Continue</button>
        </form>
    </div>
</body>
</html>

