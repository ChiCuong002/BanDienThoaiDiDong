<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <!-- My CSS -->
    <link href="~/Content/LayoutAdmin.css" rel="stylesheet" />

    <link href="~/Content/PagedList.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>Admin Dashboard</title>
</head>
<body>


    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="#" class="brand">
            <i class='bx bxs-smile'></i>
            <span class="text">NHẤT NGHỆ</span>
        </a>
        <ul class="side-menu top">
            <li class="active">
                <a href="/Admin/DanhSachSanPham/Index">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Quản lý sản phẩm</span>
                </a>
            </li>
            <li>
                <a id="dsnvLink" href="/Admin/Staff/DSNV">
                    <i class='bx bxs-group'></i>
                    <span class="text">Quản lý nhân viên</span>
                </a>
            </li>
            <li>
                <a id="dskh" href="/QLDonHang/QLUser/Index">
                    <i class='bx bx-user-check'></i>
                    <span class="text">Quản lý khách hàng</span>
                </a>
            </li>
           
        </ul>
        <ul class="side-menu">
            <li>
                <a href="/Admin/AdminLogin/Logout" class="logout">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text">Đăng xuất</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- SIDEBAR -->
    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <a href="/QLDonHang/QLUser/Profile" class="profile">
                Xin chào, @User.Identity.Name
            </a>
        </nav>
        <!-- NAVBAR -->
        <!-- MAIN -->
        <main>
            @RenderBody()
        </main>
        <!-- MAIN -->
    </section>
    <!-- CONTENT -->


    <script src="~/Scripts/script_layout_admin.js"></script>
</body>
</html>