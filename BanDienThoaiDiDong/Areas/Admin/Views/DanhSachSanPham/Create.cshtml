            }

    .active {
        background-image: linear-gradient(to left,#F35C17,#FF920B);
        color: #fff;
    }

        .active > span {
            color: #fff;
        }

    .sidebar-content .item i {
        color: black;
    }

    .none {
        display: none;
    }

    

    /* CSS nội dung */
    .add-from-content {
        width: 100%;
        display: flex;
        gap: 10rem;
        justify-content: space-between;
        flex-direction: row;
    }

    .add-form {
        margin-top: 5rem;
        background-color: #fff;
        border-radius: 1.2rem;
        padding: 25px;
        display: flex;
        flex-direction: column;
        align-items: start;
        flex: 1;
    }

    form {
