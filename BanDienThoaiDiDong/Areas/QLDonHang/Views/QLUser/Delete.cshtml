@model BanDienThoaiDiDong.Models.KHACHHANG

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Xóa khách hàng</h2>
<div>
    <h4>KHACHHANG</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Họ và tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoTen)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Địa chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
           Số điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoDienThoai)
        </dd>
        <dt>
            Trạng thái
        </dt>

        <dd>
            @if (Model.HienThi == true)
            {
                <p>Đang hoạt động</p>
            } else
            {
                <p>Ngừng hoạt động</p>
            }
        </dd>

    </dl>

    @using (Html.BeginForm("DeleteKH","QLUser")) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.MaKH)
        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
        </div>
    }
</div>
